<div class="page-header">
<h1>Listing ALL statuses</h1>
</div>

<%= link_to "Post a NEW Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do | status | %>  <%# test commenting code, in sumblime you can shortcut w/ ctrl+shift+/ %>
<div class = "status">
  <strong><%=status.name%> </Strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %> <%#= link_to "Show", status %>
        <span class="admin">
          | <%= link_to "Edit", edit_status_path(status) %> | 
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"}%>
        </span>
    </div>
</div>
<% end %>